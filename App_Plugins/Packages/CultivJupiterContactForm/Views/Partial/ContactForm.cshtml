@model CultivJupiterContactForm.ViewModel.ContactViewModel
@if (Model.SubmitHandled)
{
    <p>
        Thanks, we'll get back to you soon.</p>
}
else
{
    using (Html.BeginUmbracoForm("HandleContactFormSubmit", new Guid("BB45D8A4-DD88-444E-89A6-A64351EFBE6A")))
    {
    @Html.ValidationSummary(true)
    <div>
        <p>@Html.ValidationMessageFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Message)</p>
    </div>  
    <fieldset>
        <legend>Your Details</legend>
        <p>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "text", placeholder = "Name" })
        </p>
        <p>
            @Html.LabelFor(model => model.CompanyName)
            @Html.TextBoxFor(model => model.CompanyName, new { @class = "text", placeholder = "Company" })
        </p>
        @Html.ValidationMessageFor(model => model.CompanyName)
        <p>
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "text", placeholder = "Your Email" })
        </p>
        <p class="other">
            @Html.LabelFor(model => model.Other)
            @Html.EditorFor(model => model.Other)
            @Html.ValidationMessageFor(model => model.Other)</p>
        <p>
            @Html.LabelFor(model => model.Message)
            @Html.TextAreaFor(model => model.Message, new { @class = "text", placeholder = "Your Message" })
        </p>
        <p>
            <input type="submit" id="button_submit" onclick="" value="Send email" name="submit">
        </p>
    </fieldset>
    <style type="text/css">
        .other
        {
            display: none;
        }
    </style>
    }
}
